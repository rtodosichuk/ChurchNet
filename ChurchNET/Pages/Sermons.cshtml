@page
@model SermonsModel
@{
    ViewData["Title"] = "Sermons";
}

@section banner  {
    <div class="section no-pad-bot banner banner-flex" id="sermon-banner">
        <div class="container grey-text text-lighten-2">
            <div class="row">
                <div class="col l12">
                    <h3 class="center white-text">Harrison Seventh-day Adventist Church Sermons</h3>
                </div>
            </div>
        </div>
    </div>
}

<div class="container">
    <div class="row">
        <div class="col s12 l9">
            <div class="live-stream">
                <h3 class="lime-text text-darken-4">Live Stream</h3>
                <p>
                    <strong>
                        Join us every Sabbath at 11:00 AM EST.
                    </strong>
                </p>
                <p>
                    <div class="container-iframe">
                        <iframe class="responsive-iframe" src="@Model.YouTubeEmbedLiveSteam"
                                allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen>
                        </iframe>
                    </div>
                    <span>Youtube.com <a href="@Model.YouTubeDirectLiveSteam" target="_blank">Live stream direct link</a></span>
                </p>
            </div>
            <hr />
            <h4 class="lime-text text-darken-4">Online Sermons</h4>
            <p>To view previous sermons visit our YouTube channel: <a href="@Model.YouTubeChannel" target="_blank">Harrison SDA Church TN</a></p>
            <div class="row">
                @foreach (var sermon in Model.Sermons)
                {
                    <div class="col s12 m12 l6">
                        <div class="card">
                            <div class="card-image">
                                <a href="@sermon.Link" target="_blank">
                                    <img src="images/welcome_harrison_sda.png">
                                </a>
                            </div>
                            <div class="card-action">
                                <a href="@sermon.Link" target="_blank">
                                    <div>
                                        <strong>Speaker:</strong> @sermon.Speaker
                                    </div>
                                    <div>
                                        <strong>Sermon:</strong> @sermon.Title
                                    </div>
                                </a>
                                <div><strong>Date:</strong> @sermon.Date</div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
            <partial name="_SideNavPartial" />
        </div>
</div>